extends ../../layouts/default.pug

block main
    h1 Danh sach san pham

    .card.mb-3 
        .card-header Bo loc va Tim kiem
        .card-body
            each item in filterStatus
                button(class=`btn btn-sm ml-1 btn-outline-success ${item.class}` button-status=item.status) #{item.name}
                //- button(class="btn btn-sm ml-1 btn-outline-success" button-status="active") Hoat dong
                //- button(class="btn btn-sm ml-1 btn-outline-success" button-status="inactive") Dung hoat dong

    .card.mb-3 
        .card-header Danh sach san pham
        .card-body
            table.table.table-hover.table-sm 
                thead 
                    tr 
                        th STT
                        th Hinh anh
                        th Tieu de
                        th Gia 
                        th Trang thai
                        th Hanh dong 
                tbody 
                    each item, index in products
                        tr 
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail, alt=item.title width="100px", height="auto")
                            td #{item.title}
                            td #{item.price}$
                            td 
                                if (item.status == "active")
                                    a(href="#" class="badge badge-success") Hoat dong
                                else 
                                    a(href="#" class="badge badge-danger") Ngung hoat dong
                            td 
                                button(class="btn btn-warning btn-sm") Sua 
                                button(class="btn btn-danger btn-sm ml-1") Xoa
                    