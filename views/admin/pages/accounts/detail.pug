extends ../../layouts/default.pug

block main
  h1(class="mb-4") Chi tiết tài khoản

  if (user.avatar)
    img(src=user.avatar width="150px" class="mb-3")
  else
    img(src="/admin/images/avatar.png" width="150px" class="mb-3")

  if (user.fullName)
    p Họ tên: <b>#{user.fullName}</b>

  if (user.email)
    p Email: <b>#{user.email}</b>

  if (user.phone)
    p Số điện thoại: <b>#{user.phone}</b>

  p 
    span Trạng thái: 
    span
      <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>

  if (dataRole.title)
    p Phân quyền: <b>#{dataRole.title}</b>
  if (dataRole.description)
    p Mô tả: <b>#{dataRole.description}</b>

  a(
    href=`${prefixAdmin}/accounts/edit/${user.id}`
    class="btn btn-primary"
  ) Chỉnh sửa thông tin