extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main 
  .container.my-3 
    .row 
      .col-12
        +box-head(pageTitle)

    .row 
      .col-12 
        .chat(my-id=user.id)
          //- .inner-head 
          //-   .inner-avatar EY 
          //-   .inner-name EM YÊU 
          .inner-body 
            each chat in chats     
              div(class=(chat.infoUser.id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.infoUser.id != user.id)
                  .inner-name #{chat.infoUser.fullName} 
                .inner-content
                  | #{chat.content}
            div(class="inner-list-typing")

          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              //- div(class="custom-file-container" data-upload-id="upload-image")
              span(class="button-icon btn btn-light mx-2") 
                <i class="fa-regular fa-face-smile"></i>
              button
                i.fa-solid.fa-paper-plane

  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")



            
            